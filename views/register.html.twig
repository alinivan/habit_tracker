<form action="/register" method="POST">
    <div class="login-box">
        <h1>Register</h1>

        <div class="textbox">
            <input type="text" placeholder="Username" name="username">
        </div>

        <div class="textbox">
            <input type="password" placeholder="Password" name="password">
        </div>

        <input class="button" type="submit" value="Register">
    </div>
</form>