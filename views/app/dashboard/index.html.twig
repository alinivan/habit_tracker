{% extends "app/layout.html.twig" %}


{% block page_title %}
    Dashboard
    <div class="text-white text-sm inline-block">
        <a href="/dashboard?routine_view">Routine View</a>
        <a href="/dashboard">Normal View</a>
    </div>
{% endblock %}

{% block content %}
    {{ stats_html | raw }}

    {% if routineView %}
        <div class="max-w-xl mx-auto">
            {{ routineHtml | raw }}
        </div>
    {% else %}
        <div class="grid xl:grid-cols-3 grid-cols-2 gap-4">
            {% for category in categories %}
                <div class="text-white">
                    <div>
                        <div class="inline-block w-full">
                            <span class="inline-block rounded w-full py-2 text-center text-md font-bold"> {{ category.name }} </span>
                        </div>
                    </div>

                    <div class="pb-3 px-3">
                        <div class="mt-4 grid md:grid-cols-2 gap-2 sm:grid-cols-1">
                            {{ category.html | raw }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    {{ tracker_html | raw }}
{% endblock %}


{% block scripts %}
    <script>
        $('.track-habit').click(function () {
            let habit_id = $(this).data('id');

            $.ajax({
                url: '/tracker/new',
                data: {
                    'habit_id': habit_id
                },
                type: 'GET',
                success: function (result) {
                    $('#modal').html(result);
                }
            });
        });

        $(document).on("click", "#tracker-save", function () {
            $.ajax({
                url: '/tracker/create',
                data: {
                    'min': $('#min').val(),
                    'date': $('#date').val(),
                    'habit_id': $('#habit_id').val()
                },
                type: 'POST',
                success: function (result) {
                    console.log(result);
                }
            });
        });


        $('.tracker-edit').click(function () {
            let id = $(this).data('id');

            $.ajax({
                url: '/tracker/edit',
                data: {
                    'id': id
                },
                type: 'GET',
                success: function (result) {
                    alert('editing');
                    // $('#modal').html(result);
                }
            });
        });

    </script>
{% endblock %}