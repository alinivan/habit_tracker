{% extends "app/layout.html.twig" %}

{% block content %}
    <main class="flex-1">
        <div class="py-6">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
                <h1 class="text-2xl font-semibold text-gray-900">Dashboard</h1>
            </div>
            <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
                    <div class="grid grid-cols-3 gap-4">
                        {% for category in categories %}
                            <div>
                                <div class="text-center">
                                    <span class="inline-flex items-center px-3 py-0.5 rounded-full text-md font-medium bg-{{ category.color }}-100 text-{{ category.color }}-800"> {{ category.name }} </span>
                                </div>
{#                                bg-green-100 text-green-800 bg-blue-100 text-blue-800 #}

                                <div class="mt-4 grid grid-cols-2 gap-2">
                                    {% for habit in category.habits %}
                                        <div class="track-habit text-center py-3 bg-gray-50 hover:bg-gray-100 cursor-pointer border-collapse border border-gray-900 rounded-md"
                                             data-id="{{ habit.id }}">
                                            {{ habit.name }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>



                <div class="max-w-lg mx-auto pt-8">
                    <h2 class="max-w-6xl mx-auto mt-8 px-4 text-lg leading-6 font-medium text-gray-900 sm:px-6 lg:px-8 text-center">Today</h2>

                    <ul role="list" class="divide-y divide-gray-200">
                        {% for item in tracker %}
                            <li class="py-4">
                                <div class="flex space-x-3">
                                    <div class="flex-1 space-y-1">
                                        <div class="flex items-center justify-between">
                                            <h3 class="text-sm font-medium">{{ item.habit.name }}</h3>
                                            <p class="text-sm text-gray-500">
                                                {{ item.start_hour ? "#{item.start_hour} - #{item.hour}" : item.hour }}
                                            </p>
                                        </div>

                                        <div class="flex items-center justify-between">
                                            {% if item.habit.value_type == 'boolean' %}
                                                <img src="/img/check-svgrepo-com.svg"/>
                                            {% else %}
                                                <p class="text-sm text-gray-500">{{ item.value }} min</p>
                                            {% endif %}

                                            <div>
                                                <a class="tracker-edit text-gray-300" href="javascript:void(0)" data-id="{{ item.id }}">edit</a>
                                                <a class="tracker-delete text-red-500" href="javascript:void(0)" data-id="{{ item.id }}">delete</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </main>
{% endblock %}


{% block scripts %}
    <script>
        $('.track-habit').click(function () {
            let habit_id = $(this).data('id');

            $.ajax({
                url: '/tracker/new',
                data: {
                    'habit_id': habit_id
                },
                type: 'GET',
                success: function (result) {
                    $('#modal').html(result);
                }
            });
        });

        $(document).on("click", "#tracker-save", function () {
            $.ajax({
                url: '/tracker/create',
                data: {
                    'min': $('#min').val(),
                    'date': $('#date').val(),
                    'habit_id': $('#habit_id').val()
                },
                type: 'POST',
                success: function (result) {
                    console.log(result);
                }
            });
        });


        $('.tracker-edit').click(function () {
            let id = $(this).data('id');

            $.ajax({
                url: '/tracker/edit',
                data: {
                    'id': id
                },
                type: 'GET',
                success: function (result) {
                    alert('editing');
                    // $('#modal').html(result);
                }
            });
        });
    </script>
{% endblock %}