{% extends "app/layout.html.twig" %}

{% block content %}
{#    {{ chart.html | raw }}#}

    <main class="flex-1">
        <div class="py-6">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
                <h1 class="text-2xl font-semibold text-white">Dashboard</h1>
            </div>

            <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">

                {{ stats_html | raw }}

                <div class="grid xl:grid-cols-3 grid-cols-2 gap-4">
                    {% for category in categories %}
                        <div class="text-white">
                            <div>
                                <div class="inline-block w-full">
                                    <span class="inline-block rounded w-full py-2 text-center text-md font-bold"> {{ category.name }} </span>
                                </div>
                            </div>

                            <div class="pb-3 px-3">
                                <div class="mt-4 grid md:grid-cols-2 gap-2 sm:grid-cols-1">
                                    {% for habit in category.habits %}
                                        <div class="track-habit text-center py-3 {{ habits[habit.id] >= habit.min_value ? 'bg-green-900 hover:bg-green-800' : 'hover:bg-gray-700' }} cursor-pointer border-collapse border border-gray-300 rounded-md"
                                             data-id="{{ habit.id }}">
                                            {{ habit.name }}

                                            {% if habit.is_productive %}
                                                <span class="text-xs italic block">{{ "(#{habits[habit.id] + 0} / #{habit.min_value})" }}</span>
                                            {% else %}
                                                <span class="text-xs italic block">-</span>
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                {{ tracker_html | raw }}



                {#                    <div class="trumbowyg-dark"> #}
                {#                        <textarea id="editor"></textarea> #}
                {#                    </div> #}


                {% for habit, values in graph %}
                    <canvas id="{{ habit }}-progress" width="400" height="150" class="mt-8 rounded px-4 py-2"></canvas>
                {% endfor %}

                <canvas id="gaining-weight-progress" width="400" height="150" class="mt-8 rounded"></canvas>

            </div>
        </div>
    </main>
{% endblock %}


{% block scripts %}
    <script>
        $('.track-habit').click(function () {
            let habit_id = $(this).data('id');

            $.ajax({
                url: '/tracker/new',
                data: {
                    'habit_id': habit_id
                },
                type: 'GET',
                success: function (result) {
                    $('#modal').html(result);
                }
            });
        });

        $(document).on("click", "#tracker-save", function () {
            $.ajax({
                url: '/tracker/create',
                data: {
                    'min': $('#min').val(),
                    'date': $('#date').val(),
                    'habit_id': $('#habit_id').val()
                },
                type: 'POST',
                success: function (result) {
                    console.log(result);
                }
            });
        });


        $('.tracker-edit').click(function () {
            let id = $(this).data('id');

            $.ajax({
                url: '/tracker/edit',
                data: {
                    'id': id
                },
                type: 'GET',
                success: function (result) {
                    alert('editing');
                    // $('#modal').html(result);
                }
            });
        });

        // $('#editor').trumbowyg();


        {% for habit, values in graph %}
        new Chart(document.getElementById('{{ habit }}-progress'), {
            type: 'line',
            data: {
                labels: JSON.parse('{{ values.labels | json_encode | raw }}'),
                datasets: [{
                    label: 'Minutes',
                    data: JSON.parse('{{ values.data | json_encode | raw }}'),
                    borderColor: 'green',
                    backgroundColor: 'white',
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: '{{ habit }} Chart',
                        color: 'white'
                    }
                },
                scales: {
                    x: {
                        ticks: {
                            color: 'white',
                        }
                    },
                    y: {
                        ticks: {
                            color: 'white',
                        }
                    },
                }
            }
        });
        {% endfor %}

        new Chart(document.getElementById('gaining-weight-progress'), {
            type: 'line',
            data: {
                labels: JSON.parse('{{ graph.sport.labels | json_encode | raw }}'),
                datasets: [
                    {
                        label: 'Sport',
                        data: JSON.parse('{{ graph.sport.data | json_encode | raw }}'),
                        borderColor: 'rgb(255,127,80)',
                        backgroundColor: 'rgb(255,127,80)',
                    },{
                        label: 'Kg',
                        data: JSON.parse('{{ graph.kg.data | json_encode | raw }}'),
                        borderColor: 'rgb(255,215,0)',
                        backgroundColor: 'rgb(255,215,0)',
                    },{
                        label: 'Proteins',
                        data: JSON.parse('{{ graph.proteins.data | json_encode | raw }}'),
                        borderColor: 'rgb(127,255,0)',
                        backgroundColor: 'rgb(127,255,0)',
                    },{
                        label: 'Eating',
                        data: JSON.parse('{{ graph.eating.data | json_encode | raw }}'),
                        borderColor: 'rgb(147,112,219)',
                        backgroundColor: 'rgb(147,112,219)',
                    }
                ]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Gaining Weight Chart',
                        color: 'white'
                    }
                },
                scales: {
                    x: {
                        ticks: {
                            color: 'white',
                        }
                    },
                    y: {
                        ticks: {
                            color: 'white',
                        }
                    },
                }
            }
        });
    </script>

{#    {{ chart.js | raw }}#}
{% endblock %}