<script>

    chart_datasets = [];

    {% for dataset in chart.datasets %}
        chart_datasets = [...chart_datasets, {
            label: 'Minutes',
            data: JSON.parse('{{ dataset | json_encode | raw }}'),
            borderColor: 'green',
            backgroundColor: 'white',
        }]
    {% endfor %}

    new Chart(document.getElementById('{{ chart.id }}'), {
        type: '{{ chart.type }}',
        data: {
            labels: JSON.parse('{{ chart.labels | json_encode | raw }}'),
            datasets: chart_datasets
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: '{{ chart.title }}',
                    color: 'white'
                }
            },
            scales: {
                x: {
                    ticks: {
                        color: 'white',
                    }
                },
                y: {
                    ticks: {
                        color: 'white',
                    }
                },
            }
        }
    });
</script>
